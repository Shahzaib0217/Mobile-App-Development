<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="253dp"
        android:layout_height="37dp"
        android:text="WELCOME HOME!"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="270dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="290dp"
        android:layout_marginBottom="311dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button4"
            android:layout_width="134dp"
            android:layout_height="132dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/bedroom_svg"
            android:text="Bedroom" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/bathroom_svg"
            android:text="Bathroom" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="135dp"
        android:layout_height="270dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="311dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/living_room"
            android:text="Living room" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/kidsroom_svg"
            android:text="Kids room" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="270dp"
        android:layout_marginStart="282dp"
        android:layout_marginTop="149dp"
        android:layout_marginBottom="312dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/kitchen_svg"
            android:text="KITCHEN"
            app:iconPadding="24dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="113dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/dining_svg"
            android:text="Dinning Room" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="11dp"
        android:text="_________________________________________"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="409dp"
        android:layout_height="54dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.139"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:text="Light Control"
            android:drawableLeft="@drawable/bulb_svg"
            />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:showText="true"
            android:textOff="OFF"
            android:textOn="ON"
            android:layout_marginRight="25dp"
            android:thumb="@drawable/switch_btn"
            android:track="@drawable/track" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="53dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.172"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:text="Power Supply"
            android:drawableLeft="@drawable/plug_svg"
            tools:layout_editor_absoluteX="320dp"
            tools:layout_editor_absoluteY="650dp" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:showText="true"
            android:textOff="OFF"
            android:textOn="ON"
            android:layout_marginRight="15dp"
            android:thumb="@drawable/switch_btn"
            android:track="@drawable/track"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="650dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>