<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="253dp"
        android:layout_height="37dp"
        android:text="WELCOME HOME!"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="270dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="150dp">

        <Button
            android:id="@+id/button4"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/bedroom_svg"
            android:text="Bedroom" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/bathroom_svg"
            android:text="Bathroom" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="270dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="150dp">

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/living_room"
            android:text="Living room" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/kidsroom_svg"
            android:text="Kids room" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="270dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="149dp">

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/kitchen_svg"
            android:text="KITCHEN"
            app:iconPadding="24dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="113dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/dining_svg"
            android:text="Dinning Room" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="____________________________________________________________"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="452dp" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="OFF"
        android:textOn="ON"
        tools:layout_editor_absoluteX="289dp"
        tools:layout_editor_absoluteY="528dp" />


</androidx.constraintlayout.widget.ConstraintLayout>