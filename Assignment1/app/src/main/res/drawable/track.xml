<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#40AEC7"></solid>
            <corners android:radius="30dp"></corners>
            <stroke android:color="#40AEC7" android:width="2dp"></stroke>
            <size android:width="65dp" android:height="50dp"></size>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#4282DC"></solid>
            <stroke android:color="#4282DC" android:width="2dp"></stroke>
            <corners android:radius="30dp"></corners>
            <size android:width="65dp" android:height="50dp"></size>
        </shape>

    </item>
</selector>